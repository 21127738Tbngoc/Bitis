<!--Breadcrumb-->
<div class="container-fluid">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="/admin">ADMIN</a></li>
            <li><a href="#">SẢN PHẨM</a></li>
            <li>THÊM SẢN PHẨM</li>
        </ul>
    </div>
    <div class="container">
        <h4>Hình ảnh</h4>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="fileInput">Tải lên</span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputImage"
                aria-describedby="fileInput" multiple>
                <label class="custom-file-label" for="inputImage">Chọn ảnh</label>
            </div>
        </div>
    </div>
    
    <div class="container">
        <h4>Thông tin</h4>
        <form>
            <div class="row d-flex">
                <!--Name-->
                <div class="mb-3">
                    <label for="name" class="form-label">Tên</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <!--Price-->
                <div class="input-group mb-3">
                    <label for="price" class="form-label">Giá</label>
                    <input type="text" class="form-control" id="price">
                    <span class="input-group-text">đ</span>
                </div>
            </div>
            <!--Description-->
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả</label>
                <input type="text-aria" class="form-control" id="description">
            </div>
            <!--Size-->
            <div class="mb-3">
                <label for="size" class="form-label">Kích cỡ</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        35
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        36
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        37
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        38
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        39
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        40
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        41
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        42
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        43
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        44
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        45
                    </label>
                </div>
            </div>
            <!--Colors-->
            <div class="mb-3">
                <label for="size" class="form-label">Màu sắc</label>
                <div class="product-color">
                    <div class="color-option d-flex">
                        <button style="background-color:#f36b26" onclick="selectColor(this)">CAM</button>
                        <button style="background-color:black" onclick="selectColor(this)">DEN</button>
                        <button style="background-color:#da0020" onclick="selectColor(this)">DOO</button>
                        <button style="background-color:#f23995" onclick="selectColor(this)">HOG</button>
                        <button style="background-color: rgb(225, 213, 206)" onclick="selectColor(this)">KEM</button>
                        <button style="background-color: rgb(70, 60, 60)" onclick="selectColor(this)">NAU</button>
                        <button style="background-color: rgb(34, 51, 34)" onclick="selectColor(this)">REU</button>
                        <button style="background-color:rgb(240, 240, 240)" onclick="selectColor(this)">TRG</button>   
                        <button style="background-color:rgb(255, 227, 68)" onclick="selectColor(this)">VAG</button>
                        <button style="background-color:gray" onclick="selectColor(this)">XAM</button>
                        <button style="background-color:#1a4ea0" onclick="selectColor(this)">XDG</button>
                        <button style="background-color:#23b551" onclick="selectColor(this)">XLC</button>
                    </div>
                </div>
            </div>
            <!--Gender-->
            <div class="mb-3">
                <p class="mb-1">Giới tính</p>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Giày Nam
                    </label>
                </div>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Giày Nữ
                    </label>
                </div>
            </div>
            <!--Style-->
            {{#if Nam}}
               {{> fillter_nam}}
            {{else}}
                {{> filter_nu}}
             {{/if}}
        </form>
    </div>
